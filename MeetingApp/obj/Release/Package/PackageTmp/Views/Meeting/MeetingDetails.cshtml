@model MeetingApp.DAL.Meeting
@if (Model != null)
{
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">Meeting Details</h3>
        </div>
        <div class="panel-body">
            <ul class="list-group">
                <li class="list-group-item">
                    <i class="glyphicon glyphicon-info-sign" style="color: red"></i> <strong>Topic: </strong>@Model.Topic
                </li>
                <li class="list-group-item">
                    <i class="glyphicon glyphicon-calendar" style="color: blue"></i> <b>Date: </b> @Model.Meeting_Date.ToString()
                </li>
                <li class="list-group-item">
                    <i class="glyphicon glyphicon-time" style="color: blue"></i> <b>Start: </b> @Model.Start_Time.ToShortTimeString();
                </li>
                <li class="list-group-item">
                    <i class="glyphicon glyphicon-time" style="color: blue"></i> <b>End: </b> @Model.End_Time.ToShortTimeString();
                </li>
                <li class="list-group-item">
                    <i class="glyphicon glyphicon-bell " style="color: green"></i>  <strong>Type: </strong> @Model.MeetingType.meeting_type
                </li>
            </ul>
           
        </div>
    </div>
   
}
else
{
    <div class="alert alert-dismissible alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Heads up!</strong> No meetings found for this user.
    </div>
}