@model List<MeetingApp.DAL.Meeting>

@if (Model.Count > 0)
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Employee Meetings Info</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Topic</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var meeting in Model)
                    {
                        <tr>
                            <td>
                                @Ajax.ActionLink(meeting.Topic, "MeetingDetails", "Meeting",new { meetingId = meeting.Id},
                                    new AjaxOptions
                                    {
                                        HttpMethod = "GET", // HttpMethod to use, GET or POST
                                        UpdateTargetId = "meetingDetails", // ID of the HTML element to update
                                        InsertionMode = InsertionMode.Replace // Replace the existing contents
                                    })
                            </td>
                            <td>@meeting.Meeting_Date.ToString()</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Heads up!</strong> No meetings found for this user.
    </div>
}