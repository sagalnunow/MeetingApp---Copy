@model IEnumerable<MeetingApp.DAL.Company>

@{
    ViewBag.Title = "Index";
}

<h2>All Company Information</h2>

<p>
    @Html.ActionLink("Export to Excel", "Reports", new { ReportType="Excel"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfProperties)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfProperties)
        </td>
        @if (User.IsInRole("A") || User.IsInRole("BE"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
        </tr>
}

</table>
